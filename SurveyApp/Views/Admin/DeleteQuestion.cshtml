@model Question

@{
    ViewData["Title"] = "Delete Question";
}

<h3>Are you sure you want to delete this Question?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
